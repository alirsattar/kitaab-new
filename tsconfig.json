{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "resolveJsonModule": true,
      "outDir": "./dist",
  },
  "include": [
      "app.ts",
      "server.ts",
      "config/*.ts",
      "routes/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}